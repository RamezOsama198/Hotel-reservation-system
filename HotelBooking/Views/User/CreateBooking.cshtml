@model Booking

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Create Booking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #000; /* Black background */
            color: #FFD700; /* Golden Yellow text */
            font-family: 'Cairo', sans-serif;
        }

        .card {
            background-color: #111;
            border: 1px solid #FFD700;
            border-radius: 10px;
            color: #FFD700;
            box-shadow: 0 0 12px rgba(255, 215, 0, 0.3);
        }

        h2, h3 {
            color: #FFD700;
            text-align: center;
            margin-bottom: 20px;
            text-shadow: 0 0 8px rgba(255, 215, 0, 0.6);
        }

        label {
            color: #FFD700;
            font-weight: bold;
        }

        .form-control {
            background-color: #000;
            border: 1px solid #FFD700;
            color: #FFD700;
        }

            .form-control:focus {
                background-color: #111;
                border-color: #FFD700;
                box-shadow: 0 0 8px #FFD700;
                color: #FFD700;
            }

        .form-check-input {
            background-color: #000;
            border: 1px solid #FFD700;
        }

            .form-check-input:checked {
                background-color: #FFD700;
            }

        .btn-primary {
            background-color: #FFD700;
            border: none;
            color: #000;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #e6c200;
                color: #000;
            }
    </style>
</head>
<body>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
            <h2>Create Booking</h2>

            <form asp-action="CreateBooking" method="post">
                <!-- Check-in -->
                <div class="mb-3">
                    <label>Check-in Date:</label>
                    <input type="date" asp-for="checkInTime" class="form-control" />
                </div>

                <!-- Check-out -->
                <div class="mb-3">
                    <label>Check-out Date:</label>
                    <input type="date" asp-for="checkOutTime" class="form-control" />
                </div>

                <!-- Rooms -->
                <h3>Select Rooms:</h3>
                <div class="mb-3">
                    @foreach (var room in ViewBag.AvailableRooms as IEnumerable<Room>)
                    {
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" name="roomIds" value="@room.Id" id="room_@room.Id" />
                            <label class="form-check-label" for="room_@room.Id">
                                Room ID: @room.Id — Price: @room.PricePerDay $
                            </label>
                        </div>
                    }
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-primary w-100">Book</button>
            </form>
        </div>
    </div>
</body>
</html>
