@model Booking
@using HotelBooking.Models

@{
    ViewData["Title"] = "Create Booking";
    var rooms = ViewBag.AvailableRooms as IEnumerable<Room>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #000;
            color: #FFD700;
            font-family: 'Cairo', sans-serif;
        }

        .card {
            background-color: #111;
            border: 1px solid #FFD700;
            border-radius: 12px;
            color: #FFD700;
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.4);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            text-shadow: 0 0 8px rgba(255, 215, 0, 0.6);
        }

        label {
            font-weight: bold;
        }

        .form-control {
            background-color: #000;
            border: 1px solid #FFD700;
            color: #FFD700;
        }

            .form-control:focus {
                background-color: #111;
                border-color: #FFD700;
                box-shadow: 0 0 8px #FFD700;
                color: #FFD700;
            }

        .form-check-input {
            background-color: #000;
            border: 1px solid #FFD700;
        }

            .form-check-input:checked {
                background-color: #FFD700;
            }

        .btn-primary {
            background-color: #FFD700;
            border: none;
            color: #000;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #e6c200;
                color: #000;
            }

        #roomsContainer {
            max-height: 250px;
            overflow-y: auto;
            border: 1px solid #FFD700;
            padding: 10px;
            border-radius: 6px;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow-lg p-4" style="width: 100%; max-width: 650px;">
            <h2>Create Booking</h2>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="CreateBooking" method="post">
                <!-- Dates -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="checkInTime">Check-in Date</label>
                        <input id="CheckIn" type="date" asp-for="checkInTime" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="checkOutTime">Check-out Date</label>
                        <input id="CheckOut" type="date" asp-for="checkOutTime" class="form-control" required />
                    </div>
                </div>

                <!-- Guests -->
                <div class="mb-3">
                    <label asp-for="NumberOfGuests">Number of Guests</label>
                    <input asp-for="NumberOfGuests" type="number" min="1" class="form-control" required />
                </div>

                <!-- Extra Services -->
                <div class="form-check mb-2">
                    <input asp-for="Gym" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">Gym Access</label>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="SPA" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">SPA Access</label>
                </div>

                <!-- Rooms -->
                <div class="mb-3">
                    <label class="form-label">Select Rooms</label>
                    <input type="text" id="roomSearch" class="form-control mb-2" placeholder="Search rooms..." />
                    <div id="roomsContainer">
                        @foreach (var room in rooms)
                        {
                            <div class="form-check mb-2 room-item">
                                <input class="form-check-input" type="checkbox" name="roomIds" value="@room.Id" id="room_@room.Id" />
                                <label class="form-check-label" for="room_@room.Id">
                                    <strong>@room.Id</strong> - @room.RoomType | Price: @room.PricePerDay.ToString("C") | Max People: @room.MaxPeople
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Book Now</button>
            </form>
        </div>
    </div>

    <script>
        // Search rooms
        const searchBox = document.getElementById("roomSearch");
        const roomItems = document.querySelectorAll(".room-item");
        searchBox.addEventListener("input", function () {
            const value = this.value.toLowerCase();
            roomItems.forEach(item => {
                const text = item.innerText.toLowerCase();
                item.style.display = text.includes(value) ? "block" : "none";
            });
        });

        // Check-in / Check-out validation
        const checkInInput = document.getElementById('CheckIn');
        const checkOutInput = document.getElementById('CheckOut');
        const today = new Date().toISOString().split('T')[0];
        checkInInput.min = today;

        checkInInput.addEventListener('change', () => {
            const checkInDate = checkInInput.value;
            checkOutInput.min = checkInDate;
        });

        const form = checkInInput.closest('form');
        form.addEventListener('submit', (e) => {
            if (checkOutInput.value < checkInInput.value) {
                alert("Check-out date must be greater than or equal to Check-in date.");
                e.preventDefault();
            }
        });
    </script>
</body>
</html>
