@model IEnumerable<HotelBooking.Models.Booking>
@using HotelBooking.Models


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #000;
            color: #FFD700;
            font-family: 'Cairo', sans-serif;
        }

        .card {
            background-color: #111;
            border: 1px solid #FFD700;
            border-radius: 10px;
            color: #FFD700;
            margin-bottom: 20px;
            box-shadow: 0 0 12px rgba(255, 215, 0, 0.3);
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            text-shadow: 0 0 8px rgba(255, 215, 0, 0.6);
        }

        .btn-primary {
            background-color: #FFD700;
            border: none;
            color: #000;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #e6c200;
                color: #000;
            }

        .btn-danger {
            background-color: #ff4d4d;
            border: none;
            color: #fff;
            font-weight: bold;
        }

            .btn-danger:hover {
                background-color: #e63939;
            }

        .table th, .table td {
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>My Bookings</h2>

        @if (!Model.Any())
        {
            <div class="alert alert-warning text-dark">
                You have no bookings yet.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-dark table-striped align-middle text-center">
                    <thead>
                        <tr>
                            <th>Booking ID</th>
                            <th>Check-in</th>
                            <th>Check-out</th>
                            <th>Guests</th>
                            <th>Rooms</th>
                            <th>Extras</th>
                            <th>Total Price</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.Id</td>
                                <td>@booking.checkInTime.ToString("yyyy-MM-dd")</td>
                                <td>@booking.checkOutTime.ToString("yyyy-MM-dd")</td>
                                <td>@booking.NumberOfGuests</td>
                                <h6>Rooms:</h6>
                                <td>
                                    @if (booking.rooms != null && booking.rooms.Any())
                                    {
                                        <ul>
                                            @foreach (var room in booking.rooms)
                                            {
                                                <li>@room.RoomType - Price: @room.PricePerDay.ToString("C")</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p>No rooms assigned.</p>
                                    }
                                </td>
                                <td>
                                    @(booking.Gym ? "Gym " : "") @(booking.SPA ? "SPA" : "")
                                </td>
                                <td>@booking.TotalPrice.ToString("C")</td>
                                <td>
                                    @{
                                        string badgeClass;
                                        string badgeText;

                                        if (booking.IsCheckedOut)
                                        {
                                            badgeClass = "bg-info";
                                            badgeText = "Completed";
                                        }
                                        else if (booking.IsCheckedIn)
                                        {
                                            badgeClass = "bg-warning text-dark";
                                            badgeText = "Active Stay";
                                        }
                                        else if (booking.checkInTime < DateTime.Today)
                                        {
                                            badgeClass = "bg-danger";
                                            badgeText = "Expired";
                                        }
                                        else
                                        {
                                            badgeClass = "bg-secondary";
                                            badgeText = "Pending";
                                        }
                                    }
                                    <span class="badge @badgeClass">@badgeText</span>
                                </td>
                                <td>
                                    <a asp-controller="User" asp-action="UpdateBooking" asp-route-id="@booking.Id" class="btn btn-primary btn-sm mb-1">Edit</a>
                                    <form asp-controller="User" asp-action="DeleteBooking" asp-route-id="@booking.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this booking?');">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</body>
</html>
