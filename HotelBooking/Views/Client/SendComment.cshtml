@model HotelBooking.ViewModel.CommentVM
@using Microsoft.AspNetCore.Identity
@inject UserManager<HotelBooking.Models.User> UserManager
@{
    var currentUser = await UserManager.GetUserAsync(User);
}

<style>
    body {
        background-color: #000;
        color: #FFD700;
        font-family: 'Cairo', sans-serif;
    }

    .card {
        background-color: #111;
        border: 1px solid #FFD700;
        border-radius: 10px;
        color: #FFD700;
        margin-bottom: 20px;
        box-shadow: 0 0 12px rgba(255, 215, 0, 0.3);
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
        text-shadow: 0 0 8px rgba(255, 215, 0, 0.6);
    }

    .btn-primary {
        background-color: #FFD700;
        border: none;
        color: #000;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #e6c200;
            color: #000;
        }

    .btn-danger {
        background-color: #ff4d4d;
        border: none;
        color: #fff;
        font-weight: bold;
    }

        .btn-danger:hover {
            background-color: #e63939;
        }

    .table th, .table td {
        vertical-align: middle;
    }
</style>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<div class="container mt-5">
    <div class="card p-4 shadow-lg" style="max-width:600px; margin:auto; border:1px solid #FFD700; background-color:#111; color:#FFD700;">
        <h2 class="text-center mb-3">Send a Comment</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form asp-action="SendComment" method="post">

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter a short title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Write your comment here..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ClientName" value="@currentUser.Name" />

            <button type="submit" class="btn btn-primary w-100">Send</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
