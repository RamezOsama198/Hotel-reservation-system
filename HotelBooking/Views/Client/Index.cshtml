@{
    ViewData["Title"] = "Hotel Home";
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<!-- Banner -->
<div class="jumbotron text-white text-center d-flex align-items-center justify-content-center"
     style="background-image:url('/images/hotel-banner.jpg'); background-size:cover; height:100vh; position:relative;">
    <div class="bg-dark bg-opacity-50 p-5 rounded">
        <h1 class="display-3 fw-bold animate__animated animate__fadeInDown">Welcome to Our Luxury Hotel</h1>
        <p class="lead mb-4 animate__animated animate__fadeInUp">Enjoy comfort, elegance, and unforgettable experiences.</p>
        <a asp-controller="User" asp-action="ShowAvailableRooms" method="get"
           class="btn btn-lg px-4" style="background-color:gold; color:black; font-weight:bold;">
            View Rooms
        </a>
    </div>
</div>

<!-- About Hotel Section -->
<div class="container mt-5 text-center">
    <h2 class="text-warning fw-bold">About Our Hotel</h2>
    <p class="mt-3 text-muted">
        Our hotel offers world-class services with modern rooms, spa, gym, fine dining,
        and exceptional hospitality that guarantees a memorable stay.
    </p>
</div>

<!-- Features Section -->
<div class="container mt-5">
    <h2 class="text-warning fw-bold text-center">Our Facilities</h2>
    <div class="row mt-4">

        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 h-100" style="transition:transform 0.3s;">
                <img src="@Url.Content("~/Images/Room1.png")" class="card-img-top" />
                <div class="card-body text-center">
                    <h5 class="card-title text-dark fw-bold">Luxury Rooms</h5>
                    <p class="text-muted">Modern and comfortable rooms for a perfect stay.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 h-100" style="transition:transform 0.3s;">
                <img src="@Url.Content("~/Images/SPA.png")" class="card-img-top" />
                <div class="card-body text-center">
                    <h5 class="card-title text-dark fw-bold">SPA</h5>
                    <p class="text-muted">Relax and refresh with our full-service spa.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 h-100" style="transition:transform 0.3s;">
                <img src="@Url.Content("~/Images/NGYM.png")" class="card-img-top" />
                <div class="card-body text-center">
                    <h5 class="card-title text-dark fw-bold">Gym & Fitness</h5>
                    <p class="text-muted">State-of-the-art fitness center available 24/7.</p>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Contact Section -->
<div class="container mt-5 mb-5 text-center">
    <h2 class="text-warning fw-bold">Contact Us</h2>
    <p class="text-muted">Email: hotel@gmail.com</p>
    <p class="text-muted">Phone: +123 456 7890</p>
</div>

<style>
    /* Hover effect for cards */
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }
</style>
