@using HotelBooking.Models
@model IEnumerable<Stuff>   

@{
    ViewData["Title"] = "All Staff";
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<div class="container mt-5">
    <h2 class="mb-4 text-warning">Staff Directory</h2>

    <table class="table table-hover">
        <thead style="background-color:black; color:yellow;">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Salary</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var staff in Model)
            {
                <tr style="background-color:#fffbea;">
                    <td>@staff.Id</td>
                    <td>@staff.Name</td>
                    <td>@staff.Salary</td>
                    <td>@staff.JopTitle</td>
                    <td>
                        <a asp-action="GetStuffById" asp-route-id="@staff.Id" 
                           class="btn btn-sm" style="background-color:black; color:yellow;">
                            Details
                        </a>
                        <a asp-action="EditStuff" asp-route-id="@staff.Id" 
                           class="btn btn-sm" style="background-color:yellow; color:black;">
                            Edit
                        </a>
                        <a asp-action="DeleteStuff" asp-route-id="@staff.Id" 
                           class="btn btn-sm" style="background-color:black; color:yellow;">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No staff available</td>
            </tr>
        }

