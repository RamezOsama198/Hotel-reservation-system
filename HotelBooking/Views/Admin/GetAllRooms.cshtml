@using HotelBooking.Models
@model IEnumerable<Room>

@{
    ViewData["Title"] = "All Rooms";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<div class="container mt-5">
    <h2 class="mb-4 text-warning">All Rooms</h2>
    <table class="table table-hover">
        <thead style="background-color:black; color:yellow;">
            <tr>
                <th>ID</th>
                <th>RoomType</th>
                <th>IsAvailability</th>
                <th>PricePerDay</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
@if (Model != null && Model.Any())
{
    foreach (var room in Model)
    {
                    <tr style="background-color:#fffbea;">
                        <td>@room.Id</td>
                        <td>@room.RoomType</td>
                        <td>@room.IsAvailability</td>
                        <td>@room.PricePerDay</td>
                        <td>
                            <a asp-action="RoomDetails" asp-route-id="@room.Id"
                               class="btn btn-sm" style="background-color:black; color:yellow;">
                                Details
                            </a>
                        </td>
                    </tr>
    }
}
else
{
                <tr>
                    <td colspan="5" class="text-center text-muted">No staff available</td>
                </tr>
}

        </tbody>
    </table>
    <a asp-action="Dashboard" class="btn btn-secondary mx-2">Back</a>
</div>