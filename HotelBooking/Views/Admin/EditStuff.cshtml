@model HotelBooking.ViewModel.StuffVM
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Edit Stuff</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="EditStuff" method="post">
    <div class="mb-3">
        <label asp-for="Id" class="form-label"></label>
        <input asp-for="Id" class="form-control" readonly type="text"/>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="JopTitle" class="form-label"></label>
        <input asp-for="JopTitle" class="form-control" />
        <span asp-validation-for="JopTitle" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-select">
            <option value="">-- Select Gender --</option>
            <option value="Male" selected="@(Model.Gender == "Male")">Male</option>
            <option value="Female" selected="@(Model.Gender == "Female")">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Select Rooms</label>
        <div>
            @foreach (var room in Model.Rooms)
            {
                var isChecked = Model.SelectedRoomsIds != null &&
                Model.SelectedRoomsIds.Contains(room.Id);

                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SelectedRoomsIds"
                           value="@room.Id"
                           @(isChecked ? "checked" : "") />

                    <label class="form-check-label">
                        <b>Room #</b>@room.Id -
                        <b>Type #</b>@room.RoomType -
                        <b>MaxPeople #</b>@room.MaxPeople -
                        <b>Is Available #</b>@room.IsAvailability -
                        <b>Price Per Day </b>@room.PricePerDay.ToString("C")
                    </label>
                </div>
            }
        </div>
        <span asp-validation-for="SelectedRoomsIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Update</button>
    <a asp-action="GetAllStuffs" class="btn btn-secondary mx-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
