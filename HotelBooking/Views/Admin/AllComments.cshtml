@using HotelBooking.Models
@using HotelBooking.ViewModel
@model IEnumerable<CommentVM>

@{
    ViewData["Title"] = "Customer Comments";
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<div class="container mt-5">
    <h2 class="mb-4 text-warning">Customer Feedback</h2>

    <table class="table table-hover">
        <thead style="background-color:black; color:yellow;">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Client</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var comment in Model)
                {
                    <tr style="background-color:#fffbea;">
                        <td>@comment.Id</td>
                        <td>@comment.Title</td>
                        <td>@comment.Description</td>
                        <td>@comment.ClientName</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No comments available</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Dashboard" class="btn btn-secondary mt-3">Back</a>